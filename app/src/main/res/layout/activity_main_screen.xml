<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="edenflower.merte.flufflepuffsoundboard.Main_screen">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="brumm"
            android:soundEffectsEnabled="false"
            android:background = "#f9cae9"
            android:text="@string/brumm" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gasp"
            android:soundEffectsEnabled="false"
            android:background = "#f9cae9"
            android:text="@string/gasp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="purr"
            android:soundEffectsEnabled="false"
            android:background = "#f9cae9"
            android:text="@string/purr" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="crazy"
            android:soundEffectsEnabled="false"
            android:background = "#f9cae9"
            android:text="@string/crazy" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9cae9"
            android:onClick="bananas"
            android:soundEffectsEnabled="false"
            android:text="@string/bananas" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9cae9"
            android:onClick="fluffle"
            android:soundEffectsEnabled="false"
            android:text="@string/fluffle" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9cae9"
            android:onClick="puff"
            android:soundEffectsEnabled="false"
            android:text="@string/puff" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9cae9"
            android:onClick="kar"
            android:soundEffectsEnabled="false"
            android:text="@string/kar" />
    </LinearLayout>
</ScrollView>
